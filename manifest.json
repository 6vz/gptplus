{
  "manifest_version": 3,
  "name": "GPT+ (GPT Plus)",
  "version": "1.0",
  "description": "Uses the power of OpenAI gpt-turbo-3.5 to generate queries from you, without hassle and leaving your website.",
  "icons": [
    {
      "src": "icon.png",
      "sizes": "48x48",
      "type": "image/png"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ]
}
